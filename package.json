{
  "name": "final-project",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "build:ext": "turbo run build --filter extension-ui",
    "dev:ext": "turbo run build --filter extension-ui",
    "dev:api": "turbo run dev --filter api"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@9.6.7",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@heroicons/react": "^2.1.3",
    "boxicons": "^2.1.4",
    "lucide-solid": "^0.372.0"
  }
}
